<div class=accountForm>
  <div class=accountForm_container>
    <h2 class=accountForm_title>新規登録</h2>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "fieldContent" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldContent" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "fieldContent" %>
      </div>

      <div class="field">
        <%= f.label :確認用パスワード %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "fieldContent" %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: "actionsBtn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
