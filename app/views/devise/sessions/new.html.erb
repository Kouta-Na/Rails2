<div class=accountForm>
  <div class=accountForm_container>
    <h2 class=accountForm_title>ログイン</h2>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fieldContent" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "fieldContent" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "actionsBtn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
